unit unFuncional;

interface

uses
  Winapi.Windows,
  Winapi.Messages,
  System.SysUtils,
  System.Variants,
  System.Classes,
  System.Types,
  Vcl.Graphics,
  Vcl.Controls,
  Vcl.Forms,
  Vcl.Dialogs,
  Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    edtEntrada: TEdit;
    memoResultado: TMemo;
    btnDobrar: TButton;
    btnFiltraraPares: TButton;
    btnSomarQuadrados: TButton;
    procedure btnDobrarClick(Sender: TObject);
    procedure btnFiltraraParesClick(Sender: TObject);


  private
    { Private declarations }
    function ObterLista: TArray<Integer>;
    procedure ExibirLista(lista: TArray<integer>);
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.btnDobrarClick(Sender: TObject);
var
  lista, resultado: TArray<Integer>;
  i: integer;
begin
  lista := ObterLista;
  SetLength(resultado, Length(lista));
  for I := 0 to High(lista) do
    resultado[i] := lista[i] * 2;
   ExibirLista(resultado);
end;

procedure TForm1.btnFiltraraParesClick(Sender: TObject);
var
  lista, resultado: TArray<integer>;
  i, count: integer;
begin
  lista := ObterLista;
  SetLength(resultado, Length(lista));
  count := 0;
  for I := 0 to High(lista) do
    if lista[i] mod 2 = 0 then
    begin
      resultado[count] := lista[i];
    end;
  SetLength(resultado, count);
  ExibirLista(resultado);
end;

procedure TForm1.ExibirLista(lista: TArray<integer>);
var
  s: string;
  i: integer;
begin
  s := '';
  for I := 0 to High(lista) do
    s := s + IntToStr(lista[i]) + ', ';
   memoResultado.Lines.Add('Resultado: ' + s.TrimRight([',', ' ']));

end;

function TForm1.ObterLista: TArray<Integer>;
var
  partes: TArray<string>;
  i: integer;
begin
  partes := String(edtEntrada.Text).split([',']);
  SetLength(Result, Length(partes));
  for I := 0 to High(partes) do
    Result[i] := StrToIntDef(Trim(partes[i]), 0);
end;

end.
